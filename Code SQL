SELECT prenom,nom FROM Mineurs;
SELECT nom,lieu FROM Mines;
SELECT * FROM Mineurs WHERE prenom LIKE 'Sylv%'
SELECT nom FROM Minerais WHERE prix>30
SELECT prenom,nom,age FROM Mineurs WHERE anciennete>15
