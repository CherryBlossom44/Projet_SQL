CREATE TABLE Mineurs
(
    code INT,
    nom CHAR,
  	prenom CHAR,
    age INT,
    anciennete INT,
  	id_mine INT
);
CREATE TABLE Mines
(
    nom CHAR,
    lieu CHAR,
  	age INT,
  	id INT
);
CREATE TABLE Minerais
(
    nom CHAR,
    prix INT,
  	id_mine INT
);



